<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/mainActivityDrawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?android:attr/actionBarSize">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        Go4Lunch"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="21sp" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                app:showAsAction="collapseActionView" />
        </com.google.android.material.appbar.MaterialToolbar>

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:background="@android:color/white">
        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:background="@color/colorPrimary"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="#000000"
            app:itemTextColor="#000000"
            app:menu="@menu/nav_menu" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/navDrawerLayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#99E8C5"
        android:layout_gravity="start"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:background="@drawable/sandwichicon"
            />

        <TextView
            android:foreground="@drawable/ripple_effect"
            android:background="#99E8C5"
            android:id="@+id/usernameTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="update"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="User Name"
            android:textAlignment="viewEnd"/>

        <TextView
            android:foreground="@drawable/ripple_effect"
            android:background="#99E8C5"
            android:id="@+id/userEmailTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="update"
            android:textColor="#000000"
            android:text="User Email"
            android:textSize="20sp"
            android:layout_marginBottom="40dp"
            android:textAlignment="viewEnd"/>


        <TextView
            android:foreground="@drawable/ripple_effect"
            android:background="#99E8C5"
            android:id="@+id/yourLunchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="update"
            android:textColor="#000000"
            android:text="Your Lunch"
            android:textSize="20sp"
            android:textAlignment="viewEnd"
            android:drawableStart="@drawable/your_lunch"/>

        <TextView
            android:foreground="@drawable/ripple_effect"
            android:background="#99E8C5"
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="update"
            android:textColor="#000000"
            android:text="Settings"
            android:textSize="20sp"
            android:textAlignment="viewEnd"
            android:drawableStart="@drawable/settings"/>

        <TextView
            android:foreground="@drawable/ripple_effect"
            android:background="#99E8C5"
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="update"
            android:textColor="#000000"
            android:text="Logout"
            android:textSize="20sp"
            android:textAlignment="viewEnd"
            android:drawableStart="@drawable/logout_icon"/>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>