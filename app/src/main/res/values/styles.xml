<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#94E8C3</item>
        <item name="colorPrimaryDark">#FF71E3B1</item>
        <item name="colorAccent">#353737</item>
    </style>

    <style name="AppThemeForRestaurantDetailsActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#94E8C3</item>
        <item name="colorPrimaryDark">#FF71E3B1</item>
        <item name="colorAccent">#353737</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="MyToolbarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D12B2B</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
    </style>


    <style name="AppTheme.RoundedCornerMaterialButtonForGoogleLogin" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/google_login_button</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButtonForFacebookLogin" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/fb_login_button_style</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        // You can change thickness here.

    </style>

    <style name="PrimaryColorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#94E8C3</item>

        <!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->

    </style>

</resources>